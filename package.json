{
	"dependencies": {
		"autoprefixer": "^10.4.11",
		"postcss": "^8.4.16",
		"postcss-cli": "^10.0.0",
		"postcss-nested": "^5.0.6",
		"typescript": "^4.8.3"
	},
	"scripts": {
		"watch:styles": "postcss src/styles/main.pcss -d public/styles/ --ext=css -w",
		"watch:scripts": "tsc -w",
		"watch": "pnpm npm-run-all --parallel watch:*",

		"build:styles": "postcss src/styles/main.pcss -d public/styles/ --ext=css",
		"build:scripts": "tsc",
		"build": "pnpm npm-run-all build:*"
	},
	"devDependencies": {
		"npm-run-all": "^4.1.5"
	}
}
