{
	"dependencies": {
		"autoprefixer": "^10.4.11",
		"esbuild": "^0.15.9",
		"postcss": "^8.4.16",
		"postcss-cli": "^10.0.0",
		"postcss-nested": "^5.0.6",
		"typescript": "^4.8.3"
	},
	"scripts": {
		"watch:styles": "pnpm build:styles --watch",
		"watch:scripts": "pnpm build:scripts --watch",
		"watch": "pnpm npm-run-all --parallel watch:*",
		"build:styles": "postcss src/styles/main.pcss -d public/styles/ --ext=css",
		"build:scripts": "esbuild src/scripts/main.ts --outdir=public/scripts/ --bundle --sourcemap",
		"build": "pnpm npm-run-all build:*"
	},
	"devDependencies": {
		"npm-run-all": "^4.1.5"
	}
}
